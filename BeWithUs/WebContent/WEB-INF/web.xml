<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>BeWithUs</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>LoginForm.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  <servlet-name>person</servlet-name>
  <servlet-class>com.Blog.posts.Controller.PersonController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>person</servlet-name>
  <url-pattern>/adduser</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>login</servlet-name>
  <servlet-class>com.Blog.posts.Controller.LoginController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>login</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>post</servlet-name>
  <servlet-class>com.Blog.posts.Controller.PostController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>post</servlet-name>
  <url-pattern>/MyPost</url-pattern>
  </servlet-mapping>
  
   <servlet>
  <servlet-name>comment</servlet-name>
  <servlet-class>com.Blog.posts.Controller.CommentController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>comment</servlet-name>
  <url-pattern>/myComments</url-pattern>
  </servlet-mapping>
  
  
   <servlet>
  <servlet-name>LikesGiven</servlet-name>
  <servlet-class>com.Blog.posts.Controller.LikeController</servlet-class>
  </servlet>
  
  <servlet-mapping>
  <servlet-name>LikesGiven</servlet-name>
  <url-pattern>/LikesGiven</url-pattern>
  </servlet-mapping>
</web-app>